<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.parrish.test.ForgotPassword">

        <ScrollView
            android:id="@+id/scrollView6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Recover Account"
                    android:id="@+id/title"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_horizontal"
                    android:textColor="#ffffff"
                    android:background="#B71C1C"
                    android:layout_alignParentStart="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/answer_security_questions"/>

                </LinearLayout>

<!--                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <Spinner
                        android:id="@+id/ddlQuestion1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtQuestion1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/txtAnswer1"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Answer to Above Question"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#FF000000" />

                </LinearLayout>

<!--                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <Spinner
                        android:id="@+id/ddlQuestion2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtQuestion2"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/txtAnswer2"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Answer to Above Question"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#FF000000" />

                </LinearLayout>

<!--                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <Spinner
                        android:id="@+id/ddlQuestion3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtQuestion3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/txtAnswer3"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Answer to Above Question"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#FF000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/txtNewPass"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="New Password"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#FF000000"
                        android:inputType="textPassword" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <EditText
                        android:id="@+id/txtVerifyNewPass"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="Verify New Password"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                        android:textColor="#FF000000"
                        android:inputType="textPassword" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

</LinearLayout>
