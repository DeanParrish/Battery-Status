<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parrish.test">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Search results activity -->
        <activity
            android:name=".CreateEntry"
            android:label="@string/title_activity_create_entry"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CreateBattery"
            android:label="@string/title_activity_create_battery"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RemoveEntry"
            android:label="@string/title_activity_remove_entry"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ArchiveBattery"
            android:label="@string/title_activity_archive_battery"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ViewStatistics"
            android:label="@string/title_activity_view_statistics"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BatteryStatistics"
            android:label="@string/title_activity_battery_statistics"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditBattery"
            android:label="@string/title_activity_edit_battery"></activity>
    </application>

</manifest>
